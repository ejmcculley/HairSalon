@{
  Layout = "_Layout";
}

@model HairSalon.Models.Stylist

<h4>Add a stylist</h4>
@using (Html.BeginForm())
{
  @Html.LabelFor(model => model.Name)
  @Html.TextBoxFor(model => model.Name)
  @Html.LabelFor(model => model.Schedule)
  @Html.TextBoxFor(model => model.Schedule)
  @Html.LabelFor(model => model.Specialty)
  @Html.TextBoxFor(model => model.Specialty)
  <input type="submit" value="Add stylist" />
}
<p>@Html.ActionLink("Back to stylists", "Index")</p>